#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

menu "LVGL extension"

config LVGL_EXTENSION
    bool "Enable LVGL extension"
    default n
    ---help---
      Enable LVGL extension

if LVGL_EXTENSION

config LVX_USE_WIDGETS
	bool "Enable widgets extension"
	default y if LVGL_EXTENSION
    depends on LVGL_EXTENSION
    ---help---
      Enable widgets extension

if LVX_USE_WIDGETS

config  LVX_USE_THEME_EXTENDED
    bool "LVX_USE_THEME_EXTENDED"
	default y if LVX_USE_WIDGETS
    depends on LVX_USE_WIDGETS
    ---help---
      Enable Enable use theme extended

config LVX_USE_BTN
	bool "LVX_USE_BTN
	default y if LVX_USE_WIDGETS
    depends on LVX_USE_WIDGETS
    ---help---
      Enable Enable use lvx_btn widgets

endif

endif

endmenu
